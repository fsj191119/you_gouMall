.category_page{
  height: 100%;
}
page{
  height: 100%;
}
.main{
  height:calc(100vh - 90rpx);
  display: flex;
}

.left{
  flex: 2;
}
.menu_item{
  display: flex;
  justify-content: center;
  align-items: center;
  height: 80rpx;
}
.active{
  color: var(--themeColor);
  border-left: 5rpx solid currentColor; 
}


.right{
  flex: 5;
  width: 100%;
}
.title{
  display: flex;
  justify-content: center;
  align-items: center;
  height: 80rpx;
  margin: 20rpx;
}
.xg{
  color: #ccc;
  padding: 0 10rpx;
}

.goods{
  display: flex;
  flex-flow: wrap;
}
